{
    "name": "uccello/uccello",
    "type": "library",
    "description": "CRUD core fore Laravel projects.",
    "keywords": [
        "sardoj",
        "uccello"
    ],
    "homepage": "https://github.com/sardoj/uccello",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonathan SARDO",
            "email": "sardoj@gmail.com",
            "homepage": "https://github.com/sardoj",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.0",
        "cviebrock/eloquent-sluggable": "^4.5",
        "doctrine/dbal": "^2.7",
        "kris/laravel-form-builder": "^1.14",
        "lord/laroute" : "2.*",
        "spatie/laravel-menu": "~3.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.1",
        "phpunit/phpunit": "^7.1",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Uccello\\Core\\": "app/",
            "Uccello\\Core\\Seeds\\": "database/seeds/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Uccello\\Core\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "../../../vendor/bin/phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.4.1-dev"
        },
        "laravel": {
            "providers": [
                "Uccello\\Core\\Providers\\AppServiceProvider",
                "Uccello\\Core\\Providers\\RouteServiceProvider",
                "Uccello\\Core\\Providers\\EventServiceProvider"
            ],
            "aliases": {
                "Uccello": "Uccello\\Core\\Facades\\Uccello"
            }


        }
    },
    "config": {
        "sort-packages": true
    }
}
